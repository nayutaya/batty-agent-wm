
<div>
  <%= link_to(h("トップ"), root_path) %> &gt;
  <%= link_to(h("ログイン設定"), :controller => "/credentials") %> &gt;
  <em>OpenID認証情報の追加</em>
</div>

<h1>OpenID認証情報の追加</h1>

<%- form_for(@login_form, :url => {:action => "create"}) { |f| -%>
  <table border="1">
    <tr>
      <th><%= f.label(:openid_url) %></th>
      <td>
        <%= f.text_field(:openid_url, :size => 30) %>
        <%= error_message_on(:login_form, :openid_url) %>
      </td>
    </tr>
  </table>
  <div><%= submit_tag("追加") %></div>
<%- } -%>

<%- unless production? -%>
  <div class="debug">
    <%= error_messages_for(:login_form) %>
  </div>
<%- end -%>
