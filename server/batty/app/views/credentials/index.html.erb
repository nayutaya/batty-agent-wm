
<div>
  <%= link_to(h("トップ"), root_path) %> &gt;
  <em>ログイン設定</em>
</div>

<h2>OpenID</h2>

<table border="1">
  <thead>
    <tr>
      <th>登録日時</th>
      <th>最終ログイン日時</th>
      <th>OpenID</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="4">
        <%= link_to(add_icon + h(" 追加"), :controller => "credentials/open_id", :action => "new") %>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <%- @open_id_credentials.each { |open_id_credential| -%>
      <tr>
        <td><%= open_id_credential.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= open_id_credential.loggedin_at.try(:strftime, "%Y-%m-%d %H:%M") || "-" %></td>
        <td><%= open_id_credential.identity_url %></td>
        <td><%= link_to(delete_icon, :controller => "credentials/open_id", :action => "delete", :open_id_credential_id => open_id_credential.id) %></td>
      </tr>
    <%- } -%>
  </tbody>
</table>

<h2>メールアドレス</h2>

<table border="1">
  <thead>
    <tr>
      <th>登録日時</th>
      <th>最終ログイン日時</th>
      <th>メールアドレス</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="6">
        <%= link_to(add_icon + h(" 追加"), :controller => "credentials/email", :action => "new") %>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <%- @email_credentials.each { |email_credential| -%>
      <tr>
        <td><%= email_credential.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= email_credential.loggedin_at.try(:strftime, "%Y-%m-%d %H:%M") || "-" %></td>
        <td>
          <div><%= email_credential.email %></div>
          <%- unless email_credential.activated? -%>
            <div>アクティベーション待ち</div>
          <%- end -%>
        </td>
        <td><%= link_to(h("パスワード変更"), :controller => "credentials/email", :action => "edit_password", :email_credential_id => email_credential.id) %></td>
        <td><%= link_to(delete_icon, :controller => "credentials/email", :action => "delete", :email_credential_id => email_credential.id) %></td>
      </tr>
    <%- } -%>
  </tbody>
</table>
